{
  "appId": "com.ts.automaticAnswers",
  "productName": "Automatic answers",
  "copyright": "Copyright Â© 2024 ts",
  "directories": {
    "output": "../zddt_build"
  },
  "files": [
    "**/*",
    "!logs/**/*",
    "account.xlsx"
  ],
  "extraResources": [
    {
      "from": "config.json",
      "to": "../"
    },
    {
      "from": "tk.xlsx",
      "to": "../"
    }  
  ],
  "publish": [],
  "mac": {
    "category": "public.app-category.utilities"
  },
  "win": {
    "target": "nsis",
    "icon": "./icon.ico"
  },
  "linux": {
    "target": "AppImage"
  },
  "asar": true,
  "nsis": {
    "oneClick": false, 
    "allowToChangeInstallationDirectory": true,
    "include": "./installer.nsh"
  }
}