  "directories": {
    "output": "build"
  },
  "files": [
    "**/*"
  ],
  "extraResources": [
    {
      "from": "config.json",
      "to": "../"
    },
    {
      "from": "tk.xlsx",
      "to": "../"
    },
    {
      "from": "account.xlsx",
      "to": "../"
    }    
